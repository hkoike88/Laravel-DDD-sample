#!/bin/bash
# ===================================
# Pre-push Hook
# ===================================
# main/master ブランチへの直接プッシュを禁止
#
# セットアップ:
#   git config core.hooksPath .githooks

# カラー定義
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# 現在のブランチを取得
BRANCH=$(git symbolic-ref HEAD 2>/dev/null | sed 's/refs\/heads\///')

# main/master ブランチへの直接プッシュを禁止
if [ "$BRANCH" = "main" ] || [ "$BRANCH" = "master" ]; then
    echo -e "${RED}========================================${NC}"
    echo -e "${RED}エラー: main/master ブランチへの直接プッシュは禁止されています${NC}"
    echo -e "${RED}========================================${NC}"
    echo ""
    echo -e "${YELLOW}プルリクエスト経由で変更をマージしてください:${NC}"
    echo ""
    echo "1. feature ブランチを作成:"
    echo "   git checkout -b feature/your-feature-name"
    echo ""
    echo "2. 変更をコミット:"
    echo "   git add ."
    echo "   git commit -m \"your message\""
    echo ""
    echo "3. feature ブランチをプッシュ:"
    echo "   git push origin feature/your-feature-name"
    echo ""
    echo "4. GitHub でプルリクエストを作成"
    echo ""
    exit 1
fi

echo "プッシュを許可します: $BRANCH"
exit 0
